import "html"

let appstate = newAtom \[]int

//Counter
let add = html.ignoreAct 1+
let sub = html.ignoreAct _ - 1

def counter(model: int, a: Atom[int]) html.VNode =
    html.div html.noAttrib,
        [ html.button \[html.onClick add, a], "+"
        , "Counter {model}"
        , html.button \[html.onClick sub, a], "-"
        ]

//Dynamic Counter
let addCounter = html.ignoreAct append 0

def view(model: []int, a: Atom[[]int]) html.VNode =
    html.div html.noAttrib,
        [ html.div html.noAttrib, (html.mapView counter, model, a)
        , html.button \[html.onClick addCounter, a], "Add"
        ]

html.app view, appstate

