last_assigned_id := 0

def make_ID() ID =
    last_assigned_id += 1
    last_assigned_id - 1

def make_Entity(id: ID) &Entity =
    entities.add_component id, Entity{
        enabled = true
        layermask = make_Layermask!
            .enable game_layer
            .enable serialize_layer
    }

def free_entity(id: ID) =
    i := component_types.length - 1
    while not i == 0 do
        system := &component_types[i]
        system.free_by_id id

        i -= 1